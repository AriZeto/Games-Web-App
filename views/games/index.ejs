<% layout('./layouts/boilerplate') %>

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>All Games</title>
    </head>
    <body>
        <h1>Featured Games</h1>
        <div class="row mb-3">
            <% for (let game of featuredGames) { %>
            <div class="col-md-2">
                <div class="card">
                    <a href="/games/<%= game._id %>"><img
                            crossorigin="anonymous"
                            src="<%= game.cover %>"
                            class="card-img-top" alt></a>
                    <div class="card-body">
                        <% if (game.title.length < 20) { %>
                        <h5 class="card-title pb-4"><%= game.title %></h5>
                        <%} else {%>
                        <h5 class="card-title"><%= game.title %></h5>
                        <% } %>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><%= game.developer %>, <%=
                            game.year %></li>
                    </ul>
                </div>
            </div>
            <% } %>
        </div>

        <h1>Popular Games</h1>
        <% for (let game of allGames) { %>
        <div class="card m-3">
            <div class="row">
                <div class="col-md-3">
                    <img crossorigin="anonymous" class="img-fluid" alt
                        src="<%= game.cover %>">
                </div>

                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"> <%= game.title %> </h5>
                        <p class="card-text"> <%= game.summary %> </p>
                        <p class="card-text"> <small
                                class="text-body-tertiary"><%=
                                game.developer %>, <%=
                                game.year %></small> </p>
                        <a href="/games/<%= game._id %>"><button
                                class="btn btn-success">View <%=
                                game.title %>
                            </button></a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
    </body>
</html>
