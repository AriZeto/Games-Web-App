<% layout('./layouts/boilerplate') %>

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card-title"> <h1 class="text-center">New Game</h1></div>
        <form action="/games" method="POST" novalidate
            class="validation-required">
            <div class="mb-3">
                <label for="title" class="form-label">Title: </label>
                <input class="form-control" type="text" id="title"
                    name="game[title]" required>
                <div class="valid-feedback">
                    Looks great!
                </div>
                <div class="invalid-feedback">
                    Please provide a title for the game.
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="developer">Developer:
                </label>
                <input class="form-control" type="text" id="developer"
                    name="game[developer]" required>
                <div class="valid-feedback">
                    Looks great!
                </div>
                <div class="invalid-feedback">
                    Please provide a developer for the game.
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="year">Year: </label>
                <input class="form-control" type="number"
                    step="1" id="year" name="game[year]" required>
                <div class="valid-feedback">
                    Looks great!
                </div>
                <div class="invalid-feedback">
                    Please provide a year for the game.
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="image">Cover Image URL:
                </label>
                <input class="form-control" type="text" id="image"
                    name="game[cover]" required>
                <div class="valid-feedback">
                    Looks great!
                </div>
                <div class="invalid-feedback">
                    Please provide an image url for the game.
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="storyline">Storyline:
                </label>
                <textarea class="form-control" name="game[storyline]"
                    cols="30" rows="2" id="storyline" required></textarea>
                <div class="valid-feedback">
                    Looks great!
                </div>
                <div class="invalid-feedback">
                    Please provide the storyline for the game.
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="summary">Summary:
                </label>
                <textarea class="form-control" name="game[summary]"
                    cols="30" rows="2" id="summary" required></textarea>
                <div class="valid-feedback">
                    Looks great!
                </div>
                <div class="invalid-feedback">
                    Please provide a summary for the game.
                </div>
            </div>
            <div class="mb-3 d-grid gap-2">
                <button class="btn btn-outline-success">Add Game</button>
            </div>
        </form>
        <footer>
            <div class="mb-3">
                <a href="/games/" class="link-success text-decoration-none">Go
                    Back
                    to all Games</a>
            </div>
        </footer>
    </div>
</div>